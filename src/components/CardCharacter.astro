---
interface Props {
    id: number;
    name: string;
    image: string;
    gender: string;
    status: string;
}

const { id, name, image, gender, status } = Astro.props;
---

<article id=`id${id}` class="m-3 bg-slate-300 flex flex-col text-center border-amber-600 rounded-lg">
    <img class="pt-5 pl-5 pr-5" src={image} alt={name} />
    <h1 class="text-2xl font-bold">{name}</h1>
    <p>Gender: {gender}</p>
    <p>Status: {status}</p>
</article>